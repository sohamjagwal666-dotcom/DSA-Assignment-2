#include <iostream>
using namespace std;
int main(){
    int arr[10]={2,4,6,3,1,7,6,5,9,10};
    int k=2;
    int x=0;
    for(int i=0;i<(sizeof(arr)/sizeof(int))-1;i++){
        for(int j=i+1;j<sizeof(arr)/sizeof(int);j++){
            int b=arr[i]-arr[j];
            if(abs(b)==k){
                x++;

            }
        }
    }
    cout<<"total number of pairs are "<<x;
}
