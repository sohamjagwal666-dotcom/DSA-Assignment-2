#include <iostream>
using namespace std;
int main() {
    int n=4;
    int d=n*(n+1)/2;
    int a[d];
    int arr[n];
   for(int i=0;i<d;i++){
       cout<<"enter "<<i<<" value:-";
       cin>>a[i];
   }
    int c=0;
    for(int i=0;i<n;i++){
        for(int j=0;j<n;j++){
            if(i>=j){
                
                
                cout<<a[c];
                c++;
            }
            else{
                cout<<0;
            }
            
        }
        cout<<endl;
    }
    }
