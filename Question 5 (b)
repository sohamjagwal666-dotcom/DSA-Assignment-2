#include <iostream>
using namespace std;

int main() {
    
    int n=5;
    int a=n+2*(n-1);
    int arr[50];
    int count=0;
    for(int i=0;i<a;i++){
        cout<<"Enter number "<<i+1<<" in the array:";
        cin>>arr[i];
        cout<<endl;
    }
    for (int i=0;i<n;i++){
        for (int j=0;j<n;j++){
            if(i==j){
                cout<<arr[count]<<" ";
                count++;
            }
            else if(j==i-1){
                cout<<arr[count]<<" ";
                count++;
            }
            else if(j==i+1){
                cout<<arr[count]<<" ";
                count++;
            }
            else{
                cout<<"0 ";
            }
        }
        cout<<endl;
    }

    return 0;
}
