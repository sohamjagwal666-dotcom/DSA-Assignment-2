#include <iostream>
using namespace std;
int main() {
  int arr[5][5]={{0,0,0,2,0},
   {1,0,0,0,3},
   {0,0,0,0,0},
   {4,0,0,0,0},
   {0,8,0,0,0}};
   int size1=0;
   
   for(int i=0;i<5;i++){
       for (int j=0;j<5;j++){
           if(arr[i][j]!=0){
               size1++;
           }
       }
   }
   int sp1[size1][3];
   int row=1;
   for(int i=0;i<5;i++){
       
       for (int j=0;j<5;j++){
           if(arr[i][j]!=0){
               sp1[row][0]=i;
               sp1[row][1]=j;
               sp1[row][2]=arr[i][j];
               row++;
           }
       }
   }
   sp1[0][0]=5;
   sp1[0][1]=5;
   sp1[0][2]=size1;
    for(int i=0;i<size1;i++){
       for (int j=0;j<3;j++){
           cout<<sp1[i][j]<<" ";
           }
           cout<<endl;
       }
       for(int i=1;i<=size1;i++){
       int temp=sp1[i][0];
       sp1[i][0]=sp1[i][1];
       sp1[i][1]=temp;

           
           
       }
       
       for(int i=0;i<size1;i++){
        for(int j=1;j<=size1-1;j++){
        if  (sp1[j][0] > sp1[j+1][0] || (sp1[j][0] == sp1[j+1][0] && sp1[j][1] > sp1[j+1][1]))
{
           {
            int temp1=sp1[j][0];
            int temp2=sp1[j][1];
            int temp3=sp1[j][2];
            sp1[j][0]=sp1[j+1][0];
            sp1[j][1]=sp1[j+1][1];
            sp1[j][2]=sp1[j+1][2];
            sp1[j+1][0]=temp1;
            sp1[j+1][1]=temp2;
            sp1[j+1][2]=temp3;
            
        }}
       }}
       cout<<endl;
       for(int i=0;i<size1;i++){
       for (int j=0;j<3;j++){
           cout<<sp1[i][j]<<" ";
           }
           cout<<endl;
       }
       return 0;
   }
