
#include <iostream>
using namespace std;
 int index(int i,int j){
        return (i*(i+1))/2 + j;}
int main() {
    int n=4;
    int a=n*(n+1)/2;
    int arr[50];
   
    
    for (int i=0;i<a;i++){
        cout<<"Enter "<<i+1<<" number in array:";
        cin>>arr[i];
        cout<<endl;
    }
    for(int i=0;i<n ;i++){
        for(int j=0;j<n;j++){
            if(i<=j){
                cout<<arr[index(i,j)]<<" ";
            }
            else{
                cout<<arr[index(j,i)]<<" ";
            }
        }
        cout<<endl;
    }

    return 0;
}
