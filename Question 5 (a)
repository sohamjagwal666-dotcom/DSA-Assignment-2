#include <iostream>
using namespace std;
int main() {
    int n=4;
    int a[n];
    int arr[n];
    for(int i=0;i<n;i++){
        cout<<"enter "<<i+1<<" value:-";
        cin>>a[i];
    }
    int c=0;
    for(int i=0;i<n;i++){
        for(int j=0;j<n;j++){
            if(i>=j){
                
                
                cout<<a[c];
                c++;
            }
            else{
                cout<<"0";
            }
            
        }
        cout<<endl;
    }
    }
